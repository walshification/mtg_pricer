#!/usr/bin/env ruby

require 'unirest'

card_name = ARGV[0]

if ARGV[1]
  set_name = ARGV[1]
else
  set_name = ""
end

price_sites = ["tcgplayer", "cfb", "ebay"]

price_sites.each do |price_site|
  price_site = Unirest.get("http://magictcgprices.appspot.com/api/#{price_site}/price.json?cardname=#{card_name}&cardset=#{set_name}").body
end

puts "The current price for #{card_name} is:"
puts "TCG Player: #{price_sites[0]}"
puts "Channel Fireball: #{price_sites[1]}"
puts "eBay: #{price_sites[2]}"
